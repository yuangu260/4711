<Window x:Class="ClicknowOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ClicknowOverlay"
        Width="420" Height="240"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#CC1E1E1E"
        Topmost="True"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Clicknow Overlay (MVP Skeleton)"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="SemiBold" />

        <StackPanel Grid.Row="1" Margin="0,16,0,16" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="AI Search (Web)" Margin="0,0,8,0" Padding="12,6" />
            <Button Content="AI Summary" Margin="0,0,8,0" Padding="12,6" />
            <Button Content="Translate" Padding="12,6" />
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Text="此窗口为占位 UI，用于验证 WPF 运行与浮层样式。"
                   Foreground="#CCFFFFFF"
                   FontSize="12"
                   TextWrapping="Wrap" />
    </Grid>
</Window>
